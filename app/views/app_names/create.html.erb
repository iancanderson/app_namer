<div class="hero">
  <div class="hero-inner">
    <a href="" class="hero-logo"><img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png
      " alt="Logo Image"></a>
    <div class="hero-copy">
      <h1><%= @app_name %></h1>
      <p><%= @motto %></p>
      <% if @original_phrase %>
        <p>(pun of "<%= @original_phrase %>")</p>
      <% end %>
      <p>We can't wait to try <%= @app_name %> so we can <%= @verb %> <%= @keyword %></p>
    </div>
    <button>Learn More</button>
  </div>
</div>
