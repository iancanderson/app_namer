<div class="hero">
  <div class="hero-inner">
    <a href="" class="hero-logo">
      <i class="fa <%= @icon %> fa-5x"></i>
    </a>
    <div class="hero-copy">
      <h1><%= @app_name %></h1>
      <p class="tagline"><%= @tagline %></p>
      <% if @original_pun_phrase %>
        <p id="pun-description">(pun of "<%= @original_pun_phrase %>")</p>
      <% end %>
      <p>We can't wait to try <%= @app_name %> so we can <%= @verb %> <%= @direct_object %>!</p>
    </div>

    <%= form_tag app_names_path, class: "app_names_form" do %>
      <%= hidden_field_tag :verb, @verb %>
      <%= hidden_field_tag :direct_object, @direct_object %>
      <%= submit_tag "Try Again" %>
    <% end %>

    <%= link_to "Name a different app", root_path %>

    <div class="domain-listing">
      <%= javascript_tag do %>
        $.getJSON("/domain_availability?app_name=<%= @app_name %>", function(data) {
          var domains = [];
          $.each(data, function(key, val) {
          domains.push("<li><em>" + val.domain + "</em> <span>(available: " + val.availability + ") <a href='" + val.register_url + "'>click here to register</a></span></li>")
          });

          $( "<ul/>", {
              "class": "domain-listing",
              html: domains.join( "" )
            }).appendTo( "#domains" );
        });
      <% end %>
      <div id="domains">
      </div>
    </div>
  </div>
</div>
