<h2>What does your app do?</h2>

<%= form_tag app_names_path, class: "app_names_form" do %>
  It lets you
  <%= select_tag "verb", options_for_select(@verbs) %>
  <%= text_field_tag "direct_object" %>
  <%= submit_tag "Generate app name!" %>
  <%= submit_tag "I'm feeling lucky!" %>
<% end %>

<%= javascript_tag do %>
  function updatePlaceholder() {
    var placeholder = $(".app_names_form select").val() + " what?";
    $("#direct_object").attr("placeholder", placeholder);
  }

  $(".app_names_form select").change(updatePlaceholder);
  updatePlaceholder();
<% end %>
